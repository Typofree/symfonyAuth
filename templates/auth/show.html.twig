{% extends 'base.html.twig' %}

{% block title %}Auth{% endblock %}

{% block body %}
    <h1>Auth</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auth.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ auth.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ auth.roles ? auth.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ auth.password }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ auth.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_auth_index') }}">back to list</a>

    <a href="{{ path('app_auth_edit', {'id': auth.id}) }}">edit</a>

    {{ include('auth/_delete_form.html.twig') }}
{% endblock %}
